<div class="col-xs-12 col-md-3 list">
  <div class="thumbnail" data-id="<%= list.id %>">
    <h4><%= list.escape("title") %>  <button class="delete-list btn pull-right btn-danger btn-xs" data-id="<%= list.id %>">Delete</button></h4>
  
    <% list.cards().each(function(card) { %>
      <div class="well well-sm card" data-id="<%= card.id %>"><%= card.escape("title") %></div>
      <div class="card-show-<%= card.id %>"></div>
    <% }) %>
  
    <div class="new-card card-add toggle-card">Add a card...</div>
	
    <form role="form" class="new-card toggle-card" style="display:none">
      <div class="form-group">
        <label class="sr-only" for="card-title">Title</label>
    		<input type="text" class="form-control" 
    			name="card[title]"
          id="card-title" />
      </div>
  	</form>
  
    <button class="create-card btn btn-success new-card" style="display:none">Create</button>
  
    <button class="cancel-card btn btn-danger new-card" style="display:none">Cancel</button>

  </div>
</div>