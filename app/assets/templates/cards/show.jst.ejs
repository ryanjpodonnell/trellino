<div class="modal" id="cardModal<%= card.id %>" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title" id="myModalLabel"><%= card.escape("title") %></h4>
      </div>    
      
      <div class="modal-body">
        
        <% if (card.get('description') === null) { %>
          <a class="toggle-desc new-desc">Edit the description...</a>
        <% } else { %>
          <a class="toggle-desc new-desc"><%= card.get('description') %></a>
        <% } %>
        
        
        <form role="form" class="new-desc" style="display:none">
          <div class="form-group">
            <label class="sr-only" for="card-description">Description</label>
        		<input type="text" class="form-control" 
        			name="card[description]"
              value="<%= card.escape('description') %>"
              id="card-description" />
          </div>
      	</form>
        <button class="create-desc btn btn-success new-desc" style="display:none">Create</button>
        <button class="cancel-desc btn btn-danger new-desc" style="display:none">Cancel</button>
        
      </div>
      
      <div class="modal-footer">
        <button type="button" class="btn btn-danger delete-card">Delete</button>
      </div>
    </div>
  </div>
</div>