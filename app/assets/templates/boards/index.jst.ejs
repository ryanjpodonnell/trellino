<h2><span class="glyphicon glyphicon-user"></span> My Boards</h2>

<% boards.each(function(board) { %>
  <div class="col-xs-12 col-md-3">
  	<a href="#boards/<%= board.id %>" class="thumbnail-board">
  		<h4><%= board.escape('title') %></h4>
  	</a>
  </div>
<% })%>

<div class="col-xs-12 col-md-3">
  <div class="thumbnail-board new-board toggle-form">
  	<h4>Add board...</h4>
  </div>
  
  <div class="thumbnail-board new-board" style="display:none">
  	<form role="form">
      <div class="form-group">
        <label class="sr-only" for="board-title">Title</label>
    		<input type="text" class="form-control" 
    			name="board[title]"
          id="board-title"
    			placeholder="Enter title..." />
      </div>
  	</form>
    <button class="create-board btn btn-success">Create</button>
	  <button class="cancel-board btn btn-danger">Cancel</button>
  </div>
</div>